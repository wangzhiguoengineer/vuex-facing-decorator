{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2021"
    ]
  },
  "exclude": [
    "tests"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "esm": true,
  }
}
